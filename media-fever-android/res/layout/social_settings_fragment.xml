<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:switch="http://schemas/.android.com/apk/res/com.jdroid.android.view" 
    android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/linkAccount"
		android:layout_margin="10dp" android:textSize="20sp"/>

	<com.jdroid.android.view.SwitchButton android:id="@+id/connectToFacebook" 
	    android:layout_margin="10dp" switch:label="@string/linkToFacebook"
	    android:layout_height="wrap_content" android:layout_width="match_parent"/>

	<TextView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="10dp"
		android:text="@string/newWaysToConnect" android:textSize="15sp" android:gravity="bottom"/>

</LinearLayout>