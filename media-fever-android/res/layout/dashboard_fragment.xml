<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
	android:layout_width="match_parent" android:layout_height="match_parent" android:padding="2dp">

	<RelativeLayout android:id="@+id/mediaSessions" android:layout_width="match_parent"
		android:layout_height="0dp" android:layout_weight="0.3" android:layout_margin="2dp" android:background="@drawable/dashboard_selector"
		android:focusable="true">
		<TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:text="@string/mediaSessions"
			android:textStyle="bold" android:textSize="@dimen/dashboardTextSize" android:textColor="@android:color/white"
			android:background="@color/transluscentGrey" android:layout_alignParentTop="true" android:padding="10dp" />
		<ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/media_sessions_action_selector"
			android:layout_margin="10dp" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
			android:duplicateParentState="true" />
	</RelativeLayout>

	<LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0.3"
		android:orientation="horizontal" android:baselineAligned="false">

		<RelativeLayout android:id="@+id/watched" android:layout_width="0dp" android:layout_height="match_parent"
			android:layout_weight="0.5" android:layout_margin="2dp" android:background="@drawable/dashboard_selector"
			android:focusable="true">
			<TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:text="@string/watched"
				android:textStyle="bold" android:textSize="@dimen/dashboardTextSize" android:textColor="@android:color/white"
				android:background="@color/transluscentGrey" android:layout_alignParentTop="true" android:padding="10dp" />
			<ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/watched_action_selector"
				android:layout_margin="10dp" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
				android:duplicateParentState="true" />
		</RelativeLayout>

		<RelativeLayout android:id="@+id/wishList" android:layout_width="0dp" android:layout_height="match_parent"
			android:layout_weight="0.5" android:layout_margin="2dp" android:background="@drawable/dashboard_selector"
			android:focusable="true">
			<TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:text="@string/wishList"
				android:textStyle="bold" android:textSize="@dimen/dashboardTextSize" android:textColor="@android:color/white"
				android:background="@color/transluscentGrey" android:layout_alignParentTop="true" android:padding="10dp" />
			<ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/wishlist_action_selector"
				android:layout_margin="10dp" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
				android:duplicateParentState="true" />
		</RelativeLayout>

	</LinearLayout>

	<LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0.3"
		android:orientation="horizontal" android:baselineAligned="false">

		<RelativeLayout android:id="@+id/whatToWatch" android:layout_width="0dp" android:layout_height="match_parent"
			android:layout_weight="0.5" android:layout_margin="2dp" android:background="@drawable/dashboard_selector"
			android:focusable="true">
			<TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:text="@string/whatToWatch"
				android:textStyle="bold" android:textSize="@dimen/dashboardTextSize" android:textColor="@android:color/white"
				android:background="@color/transluscentGrey" android:layout_alignParentTop="true" android:padding="10dp" />
			<ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/what_to_watch_action_selector"
				android:layout_margin="10dp" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
				android:duplicateParentState="true" />
		</RelativeLayout>

		<RelativeLayout android:id="@+id/friends" android:layout_width="0dp" android:layout_height="match_parent"
			android:layout_weight="0.5" android:layout_margin="2dp" android:background="@drawable/dashboard_selector"
			android:focusable="true">
			<TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:text="@string/friends"
				android:textStyle="bold" android:textSize="@dimen/dashboardTextSize" android:textColor="@android:color/white"
				android:background="@color/transluscentGrey" android:layout_alignParentTop="true" android:padding="10dp" />
			<ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/friends_action_selector"
				android:layout_margin="10dp" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
				android:duplicateParentState="true" />
		</RelativeLayout>

	</LinearLayout>
	<include layout="@layout/ad_view_container" />
</LinearLayout>
