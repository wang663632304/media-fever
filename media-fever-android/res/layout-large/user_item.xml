<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="150dp"
	android:layout_height="150dp" android:background="@drawable/grid_selector">

	<com.jdroid.android.images.CustomImageView android:id="@+id/image"
		android:layout_height="match_parent" android:layout_width="match_parent" android:scaleType="centerCrop" android:src="@drawable/user_default"
		android:background="@android:color/white" />

	<TextView android:id="@+id/fullName" android:layout_height="wrap_content" android:layout_width="match_parent"
		style="@style/smallText" android:fontFamily="sans-serif" android:textStyle="bold" android:background="@color/transluscentGrey"
		android:layout_alignParentBottom="true" android:padding="5dp" />
</RelativeLayout>