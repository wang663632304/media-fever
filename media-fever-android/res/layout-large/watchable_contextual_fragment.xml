<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
	android:layout_width="match_parent" android:layout_height="match_parent" android:padding="10dp">

	<com.jdroid.android.images.CustomImageView android:id="@+id/image"
		android:layout_height="230dp" android:layout_width="200dp" android:src="@drawable/watchable_default"
		android:layout_gravity="center_horizontal" />

	<Button android:id="@+id/overview" android:layout_width="200dp" style="@style/defaultButton" android:text="@string/overview"
		android:layout_gravity="center_horizontal" android:layout_marginTop="10dp">
		<requestFocus />
	</Button>

	<Button android:id="@+id/social" android:layout_width="200dp" style="@style/defaultButton" android:text="@string/social"
		android:layout_gravity="center_horizontal" android:layout_marginTop="5dp" />

	<Button android:id="@+id/seasons" android:layout_width="200dp" style="@style/defaultButton" android:text="@string/seasons"
		android:layout_gravity="center_horizontal" android:layout_marginTop="5dp" android:visibility="gone" />

	<Button android:id="@+id/viewTrailer" android:layout_width="200dp" style="@style/defaultButton" android:text="@string/viewTrailer"
		android:layout_gravity="center_horizontal" android:layout_marginTop="5dp" android:visibility="gone" />

	<Button android:id="@+id/mediaSession" android:layout_width="200dp" style="@style/defaultButton" android:text="@string/mediaSession"
		android:layout_gravity="center_horizontal" android:layout_marginTop="5dp" />

</LinearLayout>
